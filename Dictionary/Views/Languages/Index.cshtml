@model IEnumerable<DAL.Entities.Language>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-action="Create" class="btn btn-outline-primary">Добавить</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Язык</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-primary">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary">Удалить</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>